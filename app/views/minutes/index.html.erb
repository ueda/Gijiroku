<h1>Listing minutes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Name</th>
    <th>Place</th>
    <th>Scheduled at</th>
    <th></th>
  </tr>

<% @minutes.each do |minute| %>
  <tr>
    <td><%= link_to minute.title, minute %></td>
    <td><%= minute.name %></td>
    <td><%= minute.place %></td>
    <td><%= minute.scheduled_at %></td>
    <td><%= link_to 'Destroy', minute, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Minute', new_minute_path %>
