<h1><%= @minute.title %></h1>

<p>
  <%= @minute.attendee %><br />
  <%= @minute.place %><br />
  <%= @minute.scheduled_at %>
</p>

<table>
<tbody>
<% @minute.articles.each do |article| %>
<tr>
  <td>
    <%= article.type.name unless article.type.nil? %>
  </td>
  <td>
    <%#= simple_format(article.content) %>
    <%= hbr(article.content).html_safe %>
  </td>
  <td>
    <%= article.created_at.strftime("%m/%d %H:%M") %>
  </td>
</tr>
<% end %>
</tbody>
</table>

<p>
<%= render 'minutes/form_article' %>
</p>
