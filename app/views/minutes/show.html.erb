<h1><%= @minute.title %></h1>
<%= link_to 'Edit', edit_minute_path(@minute) %>
<p>
  <%= @minute.attendee %><br />
  <%= @minute.place %><br />
  <%= @minute.scheduled_at %>
</p>
<p>
<%= render 'minutes/form_article' %>
</p>

<table>
<tbody>
<% @minute.articles.each do |article| %>
<tr>
  <td>
    <%= article.type.nil? || article.type.icon_filename.blank?  ? "-" : image_tag( article.type.icon_filename,:alt=>article.type.name ) %>
  </td>
  <td>
    <%#= simple_format(article.content) %>
    <%= hbr(article.content).html_safe %>
  </td>
  <td>
    <%= article.created_at.strftime("%m/%d %H:%M") %>
  </td>
  <td>
    <%= link_to 'Edit', edit_article_path(article) %> / 
    <%= link_to 'Destroy', article, confirm: 'Are you sure?', method: :delete %>
  </td>
</tr>
<% end %>
</tbody>
</table>

